{% extends "@alchemy_embed/iframe/layout.html.twig" %}
{% set local_title = embedMedia.title %}
{% block footerScripts %}
    <script>
        var envConfiguration = (function () {
            return {
                locale: '{{app.locale}}',
                resource: {
                    width: {{embedMedia.dimensions.width}},
                    height: {{embedMedia.dimensions.height}},
                    fitIn: true, // force fit in window
                    aspectRatio: '{{ embedMedia.dimensions.width }}:{{ embedMedia.dimensions.height }}'
                }
            };
        })();
    </script>
    <script type="text/javascript" src="/assets/vendors/alchemy-embed-medias/common.js"></script>
    <script type="text/javascript" src="/assets/vendors/alchemy-embed-medias/audio.js"></script>
{% endblock %}
{% block content %}
    <audio id="embed-audio" class="embed-resource video-js vjs-default-skin vjs-big-play-centered" controls
           preload="auto" width="100%" height="100%" poster="{{ embedMedia.coverUrl }}">
        {% for source in  embedMedia.source %}
            <source src="{{source.url}}" type="{{source.type}}">
        {% endfor %}
    </audio>
{% endblock %}